<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
					    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/aop
						http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-2.5.xsd">
						
						
	<bean id="mainWorker" class="org.chinux.pdc.EchoWorker"/>
	<bean id="server" class="org.chinux.pdc.NIOServer" lazy-init="false">
		<constructor-arg><value type="java.lang.Integer">9090</value></constructor-arg>
		<property name="worker" ref="mainWorker"></property>
	</bean>
	
	<bean id="application" class="org.chinux.pdc.App">
		<constructor-arg><ref bean="server"/></constructor-arg>
		<constructor-arg><ref bean="mainWorker"/></constructor-arg>
	</bean>
	<!-- <bean id="client" class="org.chinux.pdc.NIOAsyncClient" lazy-init="false">
		<property name="worker" ref="mainWorker"></property>
	</bean> -->
	
</beans>
